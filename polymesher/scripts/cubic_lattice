-- This generates a cubic lattice using Voronoi tessellation.

bbox = bounding_box{x1 = -1, x2 = 1,
                    y1 = -1, y2 = 1,
                    z1 = -1, z2 = 1}
points = point_factory.cubic_lattice{nx = 10, ny = 10, nz = 10, bounding_box = bbox, num_ghost = 1}
mesh = mesh_factory.voronoi(points)
print(mesh)
write_silo_plot(mesh, 'cubic_lattice')
