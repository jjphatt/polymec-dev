// This function returns true if |a - b| < epsilon, false otherwise. Here, 
// epsilon is polymec's floating point tolerance, set by default to REAL_EPSILON,
// and otherwise by set_real_epsilon.
static real_t _polymec_epsilon = REAL_EPSILON;
static inline bool reals_equal(real_t a, real_t b)
{
  return (ABS(a - b) < _polymec_epsilon);
}

// This function sets polymec's floating point tolerance.
static inline void set_real_epsilon(real_t epsilon)
{
  _polymec_epsilon = epsilon;
}

// This function returns true if |a - b| < epsilon, false otherwise. 
static inline bool reals_nearly_equal(real_t a, real_t b, real_t epsilon)
{
  return (ABS(a - b) < epsilon);
}

// This function computes and returns the fraction difference between the real numbers
// a and b, defined as |a - b| / |MIN(a, b): MIN(a, b) != 0|
static inline real_t real_frac_diff(real_t a, real_t b)
{
  real_t ref = ABS(MAX(a, b));
  if (ref > REAL_CONSTANT(0.0))
  {
    ref = (reals_equal(a, 0.0)) ? ABS(b) : (reals_equal(b, 0.0)) ? ABS(a) : ABS(MIN(a, b));
    return ABS(a - b) / ref;
  }
  else
    return REAL_CONSTANT(0.0);
}

